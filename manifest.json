{
  "manifest_version": 2,
  "name": "Tab Group Bookmarks",
  "version": "1.0.0",
  "description": "Sync browser windows with bookmark folders - each window is a tab group",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Tab Group Bookmarks",
    "default_popup": "popup.html"
  }
}
